<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F9"
    android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/recharge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recharge_toolbar_tcgm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/recharge"
                android:textColor="@color/title"
                android:background="@drawable/left_bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recharge_toolbar_mfhq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/freeget"
                android:textColor="@color/white"
                android:background="@drawable/right_transparent"

                android:textSize="16sp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/recharge_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>