<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical"
    android:background="@drawable/zhujiao_bg"
    >

    <RelativeLayout
        android:id="@+id/setting_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/textview_acctpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置通话变音"
            android:textColor="@color/title"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/voice_title_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/error_or_back" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_relativelayout"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/voice_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   您自己的原声音"
            android:textColor="@color/black"
             />

        <RadioButton
            android:id="@+id/voice_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   变成女士的声音"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/voice_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   变成男士的声音"
            android:textColor="@color/black"
             />

        <RadioButton
            android:id="@+id/voice_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   变成小孩的声音"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/voice_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   变成老人的声音"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/voice_machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:button="@drawable/radiocheck"
            android:text="   变成机器的声音"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/voice_submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_selector3"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>